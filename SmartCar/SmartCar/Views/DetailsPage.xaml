<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartCar.Views.DetailsPage"
             xmlns:viewModels="clr-namespace:SmartCar.ViewModels"
             x:DataType="viewModels:IDetailViewModel"
             Title="DetailsPage">
    <ScrollView>
        <StackLayout Padding="30">

            <Label Text="Name"
           FontSize="Medium"
           Margin="0,10,0,0"/>
            <Entry Text="{Binding Car.Tag}"
           Placeholder="Enter your car name"/>

            <Label Text="KM Amount"
           FontSize="Medium"
           Margin="0,10,0,0"/>
            <Entry Text="{Binding Car.KmAmount}" Keyboard="Numeric"
           Placeholder="Enter the amount of kilometers"/>

            <Label Text="Year"
            FontSize="Medium"
            Margin="0,10,0,0"/>
            <Entry Text="{Binding Car.YearBought}" Keyboard="Numeric"
                   Placeholder="From which year is your car"/>

            <Button Text="{Binding SaveText}"
			Command="{Binding SaveCommand}"
            Margin="0,20,0,0"/>
            <Button Text="Delete"
			Command="{Binding DeleteCommand}"
			IsVisible="{Binding CanDelete}"
			Margin="0,5,0,0"/>
            <Button Text="Cancel"
			Command="{Binding CancelCommand}"
			Margin="0,5,0,0"/>
        </StackLayout>
    </ScrollView>
</ContentPage>